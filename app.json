{
  "expo": {
    "name": "evcc",
    "slug": "evcc",
    "description": "open source solar charging",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon-dark.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash-light.png",
      "resizeMode": "cover",
      "backgroundColor": "#0FDE41",
      "dark": {
        "image": "./assets/splash-dark.png",
        "resizeMode": "cover",
        "backgroundColor": "#010322"
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "io.evcc.app",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "This app uses local network to discover your evcc installation."
      }
    },
    "android": {
      "permissions": [
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.CHANGE_WIFI_MULTICAST_STATE"
      ],
      "package": "io.evcc.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "build": {
        "babel": {
          "include": [
            "@ui-kitten/components"
          ]
        }
      }
    },
    "jsEngine": "jsc",
    "plugins": [
      "react-native-v8",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Montserrat-Bold.ttf",
            "./assets/fonts/Montserrat-Medium.ttf"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b1b49826-1d85-42bf-997f-653600e16c51"
      }
    }
  }
}
